<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/showing_error_iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/view_icon_network_error" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showing_error_iv_error"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:text="信号好像被吃掉了"
        android:textColor="#999999"
        android:textSize="@dimen/page_text_font" />


    <TextView
        android:id="@+id/showing_error_tv_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="点击刷新！"
        android:textColor="@color/black"
        android:textSize="30px" />


</RelativeLayout>